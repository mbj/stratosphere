{
  "Parameters": {
    "AvailabilityZones": {
      "Type": "List<AWS::EC2::AvailabilityZones::Name>"
    }
  },
  "Resources": {
    "AutoScalingGroup": {
      "CreationPolicy": {
        "ResourceSignal": {
          "Count": 3,
          "Timeout": "PT15M"
        }
      },
      "Properties": {
        "AvailabilityZones": {
          "Ref": "AvailabilityZones"
        },
        "DesiredCapacity": "3",
        "LaunchConfigurationName": {
          "Ref": "LaunchConfig"
        },
        "MaxSize": "1",
        "MinSize": "4",
        "TerminationPolicies": [
          "OldestLaunchConfiguration",
          "ClosesToNextInstanceHour"
        ]
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "UpdatePolicy": {
        "ScheduledAction": {
          "IgnoreUnmodifiedGroupSizeProperties": true
        }
      }
    },
    "LaunchConfig": {
      "Properties": {
        "ImageId": "ami-16d18a7e",
        "InstanceType": "t2.micro"
      },
      "Type": "AWS::AutoScaling::LaunchConfiguration"
    }
  }
}